{
	"env": {
		"node": true
	},
	"extends": "eslint:recommended",
	// "parserOptions": {
	// 	"ecmaVersion": 7,
	// 	"sourceType": "module",
	// 	"ecmaFeatures": {
	// 		"jsx": true
	// 	}
	// },
	"parser": "babel-eslint",
	"parserOptions": {
		"sourceType": "module",
		"allowImportExportEverywhere": false
	},
	"rules": {
		"indent": [
			"warn",
			"tab"
		],
		"linebreak-style": [
			"error",
			"windows"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"no-unused-vars": [
			"warn",
			{ "vars": "all", "args": "after-used" }
		]
	},
	"globals": {
		"_c": true,
		"ll": true,

		"fs": true,
		"path": true,

		"dir": true,

		"Promise": true
	}
}